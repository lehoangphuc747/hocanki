---
import Header from '../components/Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="vi">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&family=Roboto+Mono:wght@400;500;700&display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Be+Vietnam+Pro:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
	</head>
	<body class="bg-[#fefbf3] font-sans text-[#1c1917]">
		<Header />
		<slot />
	</body>
</html>

<style is:global>
	/* Base/Layout Styles */
	html {
		scroll-behavior: smooth;
		margin: 0;
		width: 100%;
		min-height: 100%;
	}

	body {
		margin: 0;
		width: 100%;
		min-height: 100%;
		font-family: 'Inter', 'Be Vietnam Pro', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
		line-height: 1.6;
		background-color: #fefbf3;
		color: #1c1917;
	}

	* {
		box-sizing: border-box;
		transition: box-shadow 0.3s ease, transform 0.3s ease;
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 1rem;
	}

	.page-wrapper {
		padding-top: 2rem;
	}

	/* Breadcrumb */
	.breadcrumb-section {
		background: #f8fafc;
		padding: 0.75rem 0;
		border-bottom: 1px solid #e5e7eb;
	}

	.breadcrumb {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		font-size: 0.875rem;
	}

	.breadcrumb-link {
		color: #4f46e5;
		text-decoration: none;
	}

	.breadcrumb-link:hover {
		text-decoration: underline;
	}

	.breadcrumb-separator {
		color: #9ca3af;
	}

	.breadcrumb-current {
		color: #1c1917;
		font-weight: 600;
	}

	/* Main Content */
	.main-content {
		padding: 1.5rem 0;
	}

	/* Back to top button */
	#back-to-top {
		position: fixed;
		bottom: 20px;
		right: 20px;
		z-index: 1000;
		opacity: 0;
		transform: translateY(100px);
		transition: all 0.3s ease;
		pointer-events: none;
	}
	#back-to-top.show {
		opacity: 1;
		transform: translateY(0);
		pointer-events: auto;
	}

	/* Neobrutalist Button styles */
	.btn {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		font-family: 'Roboto Mono', monospace;
		font-weight: 700;
		text-align: center;
		white-space: nowrap;
		vertical-align: middle;
		user-select: none;
		border: 2px solid #1c1917;
		padding: 0.5rem 1rem;
		font-size: 0.875rem;
		line-height: 1.25rem;
		border-radius: 0.375rem;
		transition: all 0.1s ease-in-out;
		box-shadow: 4px 4px 0 #1c1917;
		color: #1c1917;
	}
	.btn:hover {
		 transform: translate(-2px, -2px);
		 box-shadow: 6px 6px 0 #1c1917;
	}
	.btn:active {
		transform: translate(4px, 4px);
		box-shadow: 0 0 0 #1c1917;
	}

	.btn-primary {
		background-color: #a7f3d0; /* Mint Green */
	}
	.btn-secondary {
		background-color: #fff;
	}

	/* Table styles */
	.table-header-button {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		font-weight: 700;
		color: #1c1917;
		background: none;
		border: none;
		cursor: pointer;
		padding: 0;
		font-family: 'Roboto Mono', monospace;
	}
	.table-header-button:hover {
		color: #4f46e5; /* Indigo */
	}
	.sort-icon {
		width: 1rem;
		height: 1rem;
		transition: transform 0.2s ease-in-out, color 0.2s ease-in-out;
		color: #1c1917;
	}
	.table-header-button.active .sort-icon {
		color: #4f46e5;
	}
	.sort-icon.asc {
		transform: rotate(180deg);
	}
	.sort-icon.desc {
		transform: rotate(0deg);
	}

	.decktitle a {
		font-weight: 700;
		color: #1c1917;
		text-decoration: underline;
		text-decoration-color: #a78bfa; /* Lavender */
		text-underline-offset: 2px;
	}
	.decktitle a:hover {
		color: #4f46e5;
		text-decoration-color: #4f46e5;
	}
	
	/* Neobrutalist Button styles */
	.btn {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		font-family: 'Roboto Mono', monospace;
		font-weight: 700;
		text-align: center;
		white-space: nowrap;
		vertical-align: middle;
		user-select: none;
		border: 2px solid #1c1917;
		padding: 0.5rem 1rem;
		font-size: 0.875rem;
		line-height: 1.25rem;
		border-radius: 0.375rem;
		transition: all 0.1s ease-in-out;
		box-shadow: 4px 4px 0 #1c1917;
		color: #1c1917;
	}
	.btn:hover {
		 transform: translate(-2px, -2px);
		 box-shadow: 6px 6px 0 #1c1917;
	}
	.btn:active {
		transform: translate(4px, 4px);
		box-shadow: 0 0 0 #1c1917;
	}

	.btn-primary {
		background-color: #a7f3d0; /* Mint Green */
	}
	.btn-secondary {
		background-color: #fff;
	}
	
	/* Loading Spinner */
	.loader {
		border: 4px solid #e0e0e0;
		border-top: 4px solid #1c1917;
		border-radius: 50%;
		width: 32px;
		height: 32px;
		animation: spin 1s linear infinite;
	}

	@keyframes spin {
		0% { transform: rotate(0deg); }
		100% { transform: rotate(360deg); }
	}

	/* Row selection style */
	tr.row-selected {
		background-color: #fef9c3 !important; /* Softer Yellow */
		color: #1c1917;
	}
	
	/* Custom checkbox */
	.custom-checkbox {
		appearance: none;
		-webkit-appearance: none;
		width: 1.25rem;
		height: 1.25rem;
		border: 2px solid #1c1917;
		border-radius: 4px;
		cursor: pointer;
		position: relative;
		display: inline-block;
		vertical-align: middle;
		background-color: #fff;
	}
	.custom-checkbox:checked {
		background-color: #1c1917;
	}
	.custom-checkbox:checked::after {
		content: 'âœ”';
		font-size: 1rem;
		color: #fef9c3;
		position: absolute;
		left: 50%;
		top: 50%;
		transform: translate(-50%, -50%);
	}

	/* Sticky header */
	.table-container {
		max-height: 75vh;
		overflow-y: auto;
		border: 2px solid #1c1917;
		border-radius: 0.5rem;
	}
	thead th {
		position: sticky;
		top: 0;
		z-index: 10;
		border-bottom: 2px solid #1c1917;
	}



	/* Main Card */
	.main-card {
		background-color: #fff;
		border: 2px solid #1c1917;
		box-shadow: 8px 8px 0 #1c1917;
		border-radius: 0.5rem;
	}

	/* AddonsManager Table Styles */
	.addon-list {
		max-height: 70vh;
		overflow-y: auto;
	}

	.addon-item {
		display: flex;
		align-items: center;
		gap: 1.5rem;
		padding: 1.5rem 2rem;
		border-bottom: 1px solid #f1f5f9;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		cursor: pointer;
		position: relative;
		overflow: hidden;
		flex-wrap: nowrap;
		min-width: 0;
	}

	.addon-item::before {
		content: '';
		position: absolute;
		left: 0;
		top: 0;
		width: 4px;
		height: 100%;
		background: transparent;
		transition: all 0.3s ease;
	}

	.addon-item:hover {
		background: linear-gradient(135deg, #fef9c3 0%, #fef3c7 100%);
		transform: translateX(4px);
		box-shadow: inset 0 0 0 1px rgba(251, 191, 36, 0.2);
	}

	.addon-item:hover::before {
		background: linear-gradient(180deg, #f59e0b 0%, #d97706 100%);
	}

	.addon-item.selected {
		background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
		border-color: rgba(59, 130, 246, 0.3);
		box-shadow: inset 0 0 0 1px rgba(59, 130, 246, 0.2);
	}

	.addon-item.selected::before {
		background: linear-gradient(180deg, #3b82f6 0%, #2563eb 100%);
	}

	.item-select {
		flex-shrink: 0;
		padding: 0.25rem;
	}

	.item-checkbox {
		width: 1.25rem;
		height: 1.25rem;
		cursor: pointer;
		border-radius: 4px;
		transition: all 0.2s ease;
	}

	.item-checkbox:hover {
		transform: scale(1.1);
	}

	.item-content {
		display: flex;
		flex: 1;
		justify-content: space-between;
		align-items: center;
		gap: 2rem;
		flex-wrap: nowrap;
		min-width: 0;
	}
	
	.item-main {
		flex: 1;
		min-width: 0;
	}

	.item-title {
		margin: 0 0 0.75rem 0;
		font-size: 1.125rem;
		font-weight: 700;
		line-height: 1.4;
		letter-spacing: -0.025em;
	}

	.item-title a {
		color: #1c1917;
		text-decoration: none;
		background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
		background-size: 0% 2px;
		background-repeat: no-repeat;
		background-position: left bottom;
		transition: all 0.3s ease;
		padding: 0.25rem 0;
		display: inline-block;
	}

	.item-title a:hover {
		color: #4f46e5;
		background-size: 100% 2px;
		transform: translateY(-1px);
	}
	
	.item-meta {
		display: flex;
		gap: 1.5rem;
		font-size: 0.9rem;
		color: #64748b;
		font-family: 'Inter', sans-serif;
		font-weight: 500;
		flex-wrap: nowrap;
		align-items: center;
	}

	.meta-item {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		padding: 0.25rem 0.75rem;
		background: #f8fafc;
		border-radius: 20px;
		border: 1px solid #e2e8f0;
		transition: all 0.2s ease;
		white-space: nowrap;
		flex-shrink: 0;
	}

	.meta-item:hover {
		background: #e2e8f0;
		transform: translateY(-1px);
	}

	.meta-icon {
		font-size: 0.875rem;
		color: #94a3b8;
	}

	.likes-count {
		color: #ef4444;
		font-weight: 700;
		font-family: 'Roboto Mono', monospace;
	}

	.date-modified {
		color: #6366f1;
		font-family: 'Roboto Mono', monospace;
	}

	.version-badge {
		background: linear-gradient(135deg, #10b981 0%, #059669 100%);
		color: #fff;
		padding: 0.25rem 0.75rem;
		border-radius: 12px;
		font-weight: 600;
		font-size: 0.8rem;
		text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
		white-space: nowrap;
	}

	.item-actions {
		flex-shrink: 0;
		display: flex;
		gap: 0.75rem;
		align-items: center;
	}

	.item-btn {
		padding: 0.75rem 1.25rem;
		background: linear-gradient(135deg, #4f46e5 0%, #3730a3 100%);
		color: #fff;
		border: none;
		border-radius: 12px;
		cursor: pointer;
		font-weight: 700;
		font-size: 0.875rem;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		box-shadow: 0 4px 12px rgba(79, 70, 229, 0.3);
		position: relative;
		overflow: hidden;
	}

	.item-btn::before {
		content: '';
		position: absolute;
		top: 0;
		left: -100%;
		width: 100%;
		height: 100%;
		background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
		transition: left 0.6s;
	}

	.item-btn:hover {
		background: linear-gradient(135deg, #3730a3 0%, #312e81 100%);
		transform: translateY(-2px);
		box-shadow: 0 8px 24px rgba(79, 70, 229, 0.4);
	}

	.item-btn:active {
		transform: translateY(0);
		box-shadow: 0 2px 8px rgba(79, 70, 229, 0.3);
	}
	
	.popularity-indicator {
		flex-shrink: 0;
		padding: 0.25rem 0.75rem;
		border-radius: 12px;
		font-size: 0.75rem;
		font-weight: 700;
		text-transform: uppercase;
		letter-spacing: 0.5px;
		margin-left: auto;
	}

	.popularity-hot {
		background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
		color: #fff;
		animation: pulse 2s infinite;
	}

	.popularity-popular {
		background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
		color: #fff;
	}

	.popularity-good {
		background: linear-gradient(135deg, #10b981 0%, #059669 100%);
		color: #fff;
	}
	
	.table-view {
		background: #fff;
		border: 2px solid #1c1917;
		border-radius: 16px;
		box-shadow: 0 8px 32px rgba(28, 25, 23, 0.1);
		overflow: hidden;
		backdrop-filter: blur(10px);
	}

	.table-header {
		padding: 1.5rem 2rem;
		background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
		border-bottom: 2px solid #1c1917;
		position: sticky;
		top: 0;
		z-index: 10;
	}

	.select-all {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		cursor: pointer;
		font-weight: 700;
		font-size: 0.95rem;
		color: #1c1917;
		padding: 0.5rem;
		border-radius: 8px;
		transition: all 0.2s ease;
	}

	.select-all:hover {
		background: rgba(79, 70, 229, 0.1);
		color: #4f46e5;
	}
	
	@keyframes pulse {
		0%, 100% { opacity: 1; }
		50% { opacity: 0.8; }
	}

	/* Mobile responsive */
	@media (max-width: 768px) {
		.addon-item {
			padding: 1rem;
			gap: 1rem;
			border-radius: 12px;
			margin-bottom: 0.5rem;
			flex-direction: column;
			align-items: stretch;
		}
		
		.item-content {
			flex-direction: column;
			align-items: flex-start;
			gap: 1rem;
		}
		
		.item-meta {
			flex-direction: column;
			gap: 0.75rem;
			width: 100%;
			flex-wrap: wrap;
		}
		
		.meta-item {
			justify-content: space-between;
			padding: 0.5rem 1rem;
			background: #f1f5f9;
			border-radius: 8px;
			white-space: normal;
		}
		
		.item-title {
			font-size: 1rem;
			margin-bottom: 1rem;
		}
		
		.item-actions {
			width: 100%;
		}
		
		.item-btn {
			width: 100%;
			padding: 1rem;
			font-size: 1rem;
		}
		
		.popularity-indicator {
			position: static;
			margin-top: 0.5rem;
			margin-left: 0;
			align-self: flex-start;
			order: -1;
		}
	}
</style>
