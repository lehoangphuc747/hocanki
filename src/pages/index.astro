    <script>
        // Logic cho Accordion
        document.addEventListener('DOMContentLoaded', () => {
            const accordionButtons = document.querySelectorAll('.accordionButton') as NodeListOf<HTMLButtonElement>;

            accordionButtons.forEach(button => {
                button.addEventListener('click', () => {
                    const content = button.nextElementSibling as HTMLElement;
                    const isExpanded = button.getAttribute('aria-expanded') === 'true';

                    // Đóng tất cả các accordion khác
                    accordionButtons.forEach(otherButton => {
                        if (otherButton !== button) {
                            otherButton.setAttribute('aria-expanded', 'false');
                            otherButton.classList.remove('active');
                            const otherContent = otherButton.nextElementSibling as HTMLElement;
                            if (otherContent) {
                                otherContent.style.maxHeight = '0px';
                                otherContent.classList.remove('open');
                            }
                            const otherIcon = otherButton.querySelector('.iconIndicator') as HTMLElement;
                            if (otherIcon) {
                                otherIcon.classList.remove('rotated');
                            }
                        }
                    });

                    // Mở hoặc đóng accordion hiện tại
                    if (isExpanded) {
                        button.setAttribute('aria-expanded', 'false');
                        button.classList.remove('active');
                        if (content) {
                            content.style.maxHeight = '0px';
                            content.classList.remove('open');
                        }
                        const icon = button.querySelector('.iconIndicator') as HTMLElement;
                        if (icon) {
                            icon.classList.remove('rotated');
                        }
                    } else {
                        button.setAttribute('aria-expanded', 'true');
                        button.classList.add('active');
                        if (content) {
                            content.style.maxHeight = content.scrollHeight + 'px';
                            content.classList.add('open');
                        }
                        const icon = button.querySelector('.iconIndicator') as HTMLElement;
                        if (icon) {
                            icon.classList.add('rotated');
                        }
                    }
                });
            });
        });
    </script>
