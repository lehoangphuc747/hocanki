    align-items: center;
}
.heroTitle {
    font-size: 3rem !important;
    color: var(--color-text-white) !important;
    font-weight: 800 !important;
    margin-bottom: 1.5rem !important;
}
.heroSubtitle {
    font-size: 1.25rem; 
    color: rgba(255,255,255,0.9); 
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
    margin-bottom: 2.5rem;
}
.heroSubtitle strong { 
    color: var(--color-secondary-accent); 
    font-weight: 800; 
}
.heroButtonsContainer { 
    display: flex;
    flex-direction: column; 
    align-items: center; 
    gap: 1.5rem;
    width: 100%;
    max-width: 500px;
    margin: 0 auto;
}
.heroButtonsBottomRow {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    width: 100%;
}
.heroButtonsContainer .btnCtaPrimary, 
.heroButtonsContainer .btnCtaSecondary { 
    padding: 0.8rem 1.8rem; 
    font-size: 1.05rem; 
}

/* --- Experience & Impact Slide --- */
.experienceImpactSlide {
    background-color: var(--color-background-off-white);
}
.experienceGrid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    text-align: center;
}
.experienceItem {
    background-color: var(--color-background-white);
    padding: 2rem 1.5rem;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-md);
    transition: all 0.3s ease;
    cursor: pointer;
}
.experienceItem:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-lg);
    background-color: #fafbfc;
}
.experienceItem .number {
    font-size: 3.5rem;
    font-weight: 900;
    color: var(--color-primary);
    line-height: 1;
    margin-bottom: 0.5rem;
    transition: all 0.3s ease;
}
.experienceItem:hover .number {
    color: var(--color-secondary-accent);
    transform: scale(1.1);
}
.experienceItem .label {
    font-size: 1.1rem;
    color: var(--color-text-medium);
    font-weight: 600;
    transition: color 0.3s ease;
}
.experienceItem:hover .label {
    color: var(--color-text-dark);
}

/* --- Motivation CTA Section --- */
.motivationCtaSection {
    padding: 4rem 0;
    background: linear-gradient(135deg, #0062cc 0%, #00438a 100%); 
    color: var(--color-text-white);
    text-align: center;
}
.motivationCtaSection h2 { 
    color: var(--color-text-white); 
    font-size: 2.25rem; 
    margin-bottom: 1rem;
} 
.motivationCtaSection .subtitle {
    font-size: 1.15rem; 
    color: rgba(255,255,255,0.9); 
    max-width: 600px;
    margin: 0 auto 2rem auto;
}
.motivationBtn {
    display: inline-flex; 
    align-items: center;
    justify-content: center;
    font-weight: 700; 
    text-align: center;
    vertical-align: middle;
    cursor: pointer;
    user-select: none;
    background-color: var(--color-secondary-accent);
    border-color: var(--color-secondary-accent);
    color: var(--color-text-white) !important;
    padding: 0.875rem 2rem;
    font-size: 1.125rem;
    border: 2px solid transparent;
    border-radius: var(--border-radius);
    transition: all 0.2s ease-in-out; 
    text-decoration: none !important;
    box-shadow: var(--shadow-sm);
}
.motivationBtn:hover {
    background-color: #c42a72;
    border-color: #c42a72;
    transform: translateY(-3px); 
    box-shadow: var(--shadow-md);
    color: var(--color-text-white) !important;
}

/* --- Why This Course Slide --- */
.whyThisCourseSlide {
    background-color: var(--color-background-white);
}
.benefitGrid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
}
.benefitCard {
    background-color: var(--color-background-white);
    padding: 2rem;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-md);
    text-align: center;
    border: 1px solid var(--color-border);
    display: flex;
    flex-direction: column;
    transition: all 0.3s ease;
    cursor: pointer;
}
.benefitCard:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-lg);
    border: 1px solid var(--color-primary);
    background-color: #fafbfc;
}
.benefitCard .icon {
    font-size: 2.5rem; 
    margin-bottom: 1rem;
    color: var(--color-primary);
    transition: all 0.3s ease;
}
.benefitCard:hover .icon {
    transform: scale(1.1);
    color: var(--color-secondary-accent);
}
.benefitCard h3 {
    color: var(--color-primary);
    font-size: 1.3rem;
    transition: color 0.3s ease;
}
.benefitCard:hover h3 {
    color: var(--color-secondary-accent);
}
.benefitCard ul {
    list-style-position: inside;
    text-align: left;
    color: var(--color-text-light);
    padding-left: 0;
    margin-bottom: 1.5rem;
    flex-grow: 1;
    transition: color 0.3s ease;
}
.benefitCard:hover ul {
    color: var(--color-text-medium);
}
.benefitCard ul li {
    margin-bottom: 0.5rem;
    font-size: 0.95rem;
}

/* --- Support Slide --- */
.supportSlide {
    background-color: var(--color-background-off-white);
}
.supportItem {
    background-color: var(--color-background-white);
    padding: 1.5rem;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow-sm);
    margin-bottom: 1rem;
    border-left: 5px solid var(--color-primary);
    transition: all 0.3s ease;
    cursor: pointer;
}
.supportItem:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
    border-left: 5px solid var(--color-secondary-accent);
    background-color: #fafbfc;
}
.supportItem h3 {
    font-size: 1.25rem;
    color: var(--color-primary);
    margin-top: 0;
    margin-bottom: 0.5rem;
    transition: color 0.3s ease;
}
.supportItem:hover h3 {
    color: var(--color-secondary-accent);
}
.supportItem p {
    font-size: 0.95rem;
    color: var(--color-text-light);
    margin-bottom: 0;
    transition: color 0.3s ease;
}
.supportItem:hover p {
    color: var(--color-text-medium);
}

/* --- Roadmap Slide --- */
.roadmapSlide {
    background-color: var(--color-background-white);
}
.accordionContainer {
    max-width: 750px;
    margin: 0 auto;
}
.accordionItem {
    background-color: var(--color-background-white);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
    margin-bottom: 0.5rem;
    box-shadow: var(--shadow-sm);
}
.accordionButton {
  display: flex;
    justify-content: space-between;
  align-items: center;
    width: 100%;
    padding: 1rem 1.25rem;
    text-align: left;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text-dark);
    background-color: transparent;
    border: none;
    cursor: pointer;
    border-radius: var(--border-radius);
    min-height: 48px; /* Touch target size */
    touch-action: manipulation;
}
.accordionButton:hover {
    background-color: #f1f3f5; 
}
.accordionButton.active {
    /* Styles for active button if needed */
}
.iconIndicator { /* Class for SVG icon */
    width: 1.25rem;
    height: 1.25rem;
    transition: transform 0.3s ease-out;
    stroke: var(--color-text-light);
}
.iconIndicator.rotated {
    transform: rotate(180deg);
}
.accordionContent {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease-out, padding 0.3s ease-out;
    padding: 0 1.25rem;
}
.accordionContent.open {
    padding: 0.5rem 1.25rem 1rem 1.25rem; 
    border-top: 1px solid var(--color-border);
}
.accordionContent p {
    color: var(--color-text-light);
    font-size: 0.95rem;
}

/* --- Testimonials Slide --- */
.testimonialsSlide {
    background-color: var(--color-background-off-white);
}

.aiDisclaimerBox {
    background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%);
    border: 2px dashed #ffc107;
    border-radius: var(--border-radius);
    padding: 1.5rem;
    margin: 1.5rem auto 2.5rem auto;
    max-width: 600px;
    text-align: center;
    box-shadow: var(--shadow-sm);
    animation: subtle-pulse 3s ease-in-out infinite;
}

.aiDisclaimer {
    margin: 0;
    color: #856404;
    font-size: 0.95rem;
    line-height: 1.6;
}

.aiDisclaimer strong {
    color: #dc3545;
    font-weight: 700;
}

.aiDisclaimer em {
    font-style: italic;
    color: #6c757d;
    font-size: 0.9rem;
}

@keyframes subtle-pulse {
    0%, 100% { 
        transform: scale(1); 
        box-shadow: var(--shadow-sm);
    }
    50% { 
        transform: scale(1.02); 
        box-shadow: var(--shadow-md);
    }
}

.testimonialGrid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
}
.testimonialCard {
    background-color: var(--color-background-white);
    padding: 1.5rem;
    border-radius: var(--border-radius);
    border: 1px solid var(--color-border);
    box-shadow: var(--shadow-sm);
    transition: all 0.3s ease;
    cursor: pointer;
}
.testimonialCard:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-lg);
    border: 1px solid var(--color-primary);
    background-color: #fafbfc;
}
.testimonialCard p:first-child {
    font-style: italic;
    color: var(--color-text-light);
    margin-bottom: 1rem;
    transition: color 0.3s ease;
}
.testimonialCard:hover p:first-child {
    color: var(--color-text-medium);
}
.testimonialCard .author {
    font-weight: 600;
    color: var(--color-primary);
    transition: color 0.3s ease;
}
.testimonialCard:hover .author {
    color: var(--color-secondary-accent);
}
.moreReviewsLinkContainer { 
    text-align: center;
    margin-top: 2.5rem;
}

/* --- Registration Section --- */
.registrationSection {
    background: linear-gradient(135deg, #2c3e50 0%, #34495e 50%, #2c3e50 100%);
    color: var(--color-text-white);
    text-align: center;
    padding: 4rem 0;
    position: relative;
}
.registrationSection::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(ellipse at center, rgba(52, 73, 94, 0.1) 0%, rgba(44, 62, 80, 0.3) 100%);
    pointer-events: none;
}
.registrationContentWrapper {
    max-width: 700px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    position: relative;
    z-index: 1;
}
.registrationSection .sectionTitle {
    color: var(--color-text-white);
    font-size: 2.5rem;
    margin-bottom: 1.5rem;
    line-height: 1.2;
    white-space: nowrap;
}

/* Hero Pricing Card - Main focal point */
.pricingHeroCard {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.15) 0%, rgba(255, 255, 255, 0.08) 100%);
    border-radius: 16px;
    padding: 2.5rem 2rem;
    border: 2px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    backdrop-filter: blur(8px);
    position: relative;
    overflow: hidden;
}
.pricingHeroCard::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, #3498db, #2ecc71, #3498db);
    animation: shimmer 3s ease-in-out infinite;
}
@keyframes shimmer {
    0%, 100% { opacity: 0.8; }
    50% { opacity: 1; }
}

.originalPrice {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 0.25rem;
}
.strikethrough {
    text-decoration: line-through;
    opacity: 0.7;
}
.currentPrice {
    font-size: 4rem;
    font-weight: 900;
    color: #ffffff;
    margin: 0.5rem 0;
    line-height: 1;
    text-shadow: 0 3px 12px rgba(0, 0, 0, 0.4), 0 0 20px rgba(255, 255, 255, 0.3);
    background: linear-gradient(45deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05));
    padding: 0.3rem 1rem;
    border-radius: 12px;
    border: 2px solid rgba(255, 255, 255, 0.2);
    display: inline-block;
    animation: price-glow 3s ease-in-out infinite;
}
@keyframes price-glow {
    0%, 100% { 
        box-shadow: 0 0 15px rgba(255, 255, 255, 0.2);
        transform: scale(1);
    }
    50% { 
        box-shadow: 0 0 25px rgba(255, 255, 255, 0.4);
        transform: scale(1.02);
    }
}
.currency {
    font-size: 1.8rem;
    font-weight: 600;
}
.savingsHighlight {
    background: linear-gradient(45deg, #27ae60, #2ecc71);
    color: white;
    padding: 0.6rem 1.2rem;
    border-radius: 25px;
    display: inline-block;
    font-weight: 700;
    font-size: 1.1rem;
    margin: 0.75rem 0 0.5rem 0;
    box-shadow: 0 3px 12px rgba(39, 174, 96, 0.25);
}
.specialOffer {
    font-size: 1rem;
    color: rgba(255, 255, 255, 0.9);
    font-weight: 600;
    margin-top: 0.5rem;
}

/* CTA Button - Primary action */
.btnActionPink {
    background: linear-gradient(45deg, #3498db, #2980b9);
    border: none;
    color: var(--color-text-white);
    font-size: 1.3rem;
    padding: 1.3rem 3rem;
    margin: 1rem 0;
    font-weight: 800;
    border-radius: 50px;
    text-transform: uppercase;
    letter-spacing: 1px;
    box-shadow: 0 6px 20px rgba(52, 152, 219, 0.3);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}
.btnActionPink::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.15), transparent);
    transition: left 0.5s;
}
.btnActionPink:hover::before {
    left: 100%;
}
.btnActionPink:hover {
    transform: translateY(-3px) scale(1.02);
    box-shadow: 0 8px 25px rgba(52, 152, 219, 0.4);
    background: linear-gradient(45deg, #2980b9, #1abc9c);
}

/* Slot Tracker - Urgency indicator */
.slotTracker {
    background: linear-gradient(135deg, rgba(230, 126, 34, 0.15) 0%, rgba(211, 84, 0, 0.15) 100%);
    border: 2px solid rgba(230, 126, 34, 0.3);
    border-radius: 12px;
    padding: 1.2rem;
    margin: 1rem 0;
    animation: pulse-glow 4s ease-in-out infinite;
}
@keyframes pulse-glow {
    0%, 100% { 
        box-shadow: 0 0 8px rgba(230, 126, 34, 0.2);
    }
    50% { 
        box-shadow: 0 0 15px rgba(230, 126, 34, 0.35);
    }
}
.slotTrackerTitle {
    font-size: 1.1rem;
    margin-bottom: 0.5rem;
    color: var(--color-text-white);
    font-weight: 600;
}
.slotTrackerStatus {
    font-size: 1.2rem;
    font-weight: 700;
    color: #e67e22;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
}

/* Pricing Tiers - Supporting information */
.pricingTiers {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 1.5rem;
    border: 1px solid rgba(255, 255, 255, 0.2);
    margin: 1rem 0;
}
.pricingTier {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 1rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
}
.pricingTier:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: translateX(5px);
}
.tierLabel {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1rem;
}
.tierPrice {
    font-weight: 700;
    color: #ffffff;
    font-size: 1.1rem;
    text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);
}

/* Instructor Quote - Trust element */
.instructorQuote {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.12) 0%, rgba(255, 255, 255, 0.08) 100%);
    border-left: 4px solid #3498db;
    border-radius: 0 12px 12px 0;
    padding: 1.5rem;
    margin: 1.5rem 0 0 0;
    font-style: italic;
    position: relative;
    box-shadow: 0 3px 12px rgba(0, 0, 0, 0.08);
}
.quoteIcon {
    position: absolute;
    top: -10px;
    left: 20px;
    background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
}
.instructorQuote p {
    margin: 0;
    color: rgba(255, 255, 255, 0.95);
    font-size: 0.95rem;
    line-height: 1.6;
    padding-top: 0.5rem;
}

