    .heroSubtitle { font-size: 1.125rem; }
    .sectionTitle { font-size: 1.6rem; }
    .motivationCtaSection h2 { font-size: 1.75rem; }
    .motivationCtaSection .subtitle { font-size: 1.125rem; }
