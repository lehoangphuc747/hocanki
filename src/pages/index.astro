/* --- Section Base --- */
.slide-section { /* Renamed to avoid conflicts */
    padding: 4rem 0;
    border-bottom: 1px solid var(--color-border);
}
.slide-section:last-of-type { 
    border-bottom: none;
}

/* --- Hero Section --- */
.heroSection {
    background: linear-gradient(135deg, #364F6B 0%, #3A6073 100%);
    color: var(--color-text-white);
    padding: 6rem 0 4rem 0; /* Giảm padding cho mobile */
    text-align: center;
    border-bottom: 1px solid var(--color-border); 
