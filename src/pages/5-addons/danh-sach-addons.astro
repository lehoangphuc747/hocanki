---
import Layout from '../../layouts/Layout.astro';
import AddonsManager from '../../components/addons/AddonsManager.astro';
---

<Layout title="Top Add-ons phổ biến - AnkiWeb">
	<div class="page-wrapper">
		<main class="main-content" role="main">
			<div class="container">
				<AddonsManager />
			</div>
		</main>
	</div>
	
	<!-- Back to Top Button -->
	<button id="back-to-top" class="btn btn-primary" type="button">
		<span>↑</span> Lên đầu trang
	</button>
</Layout>

<style>
/* Page Layout */
.page-wrapper {
	min-height: 100vh;
	padding-top: 2rem;
}

.container {
	max-width: 1200px;
	margin: 0 auto;
	padding: 0 1rem;
}

/* Main Content */
.main-content {
	padding: 1.5rem 0;
}

/* Back to Top Button */
#back-to-top {
	position: fixed;
	bottom: 20px;
	right: 20px;
	z-index: 1000;
	opacity: 0;
	transform: translateY(100px);
	transition: all 0.3s ease;
	pointer-events: none;
}

#back-to-top.show {
	opacity: 1;
	transform: translateY(0);
	pointer-events: auto;
}

@media (max-width: 768px) {
	.page-wrapper {
		padding-top: 1rem;
	}
}

/* Neobrutalist Button styles */
.btn {
	display: inline-flex;
	align-items: center;
	gap: 0.5rem;
	font-family: 'Roboto Mono', monospace;
	font-weight: 700;
	text-align: center;
	white-space: nowrap;
	vertical-align: middle;
	user-select: none;
	border: 2px solid #1c1917;
	padding: 0.5rem 1rem;
	font-size: 0.875rem;
	line-height: 1.25rem;
	border-radius: 0.375rem;
	transition: all 0.1s ease-in-out;
	box-shadow: 4px 4px 0 #1c1917;
	color: #1c1917;
}

.btn:hover {
	transform: translate(-2px, -2px);
	box-shadow: 6px 6px 0 #1c1917;
}

.btn:active {
	transform: translate(4px, 4px);
	box-shadow: 0 0 0 #1c1917;
}

.btn-primary {
	background-color: #a7f3d0;
}
</style>

<script>
// Back to top functionality
document.addEventListener('DOMContentLoaded', function() {
	const backToTopBtn = document.getElementById('back-to-top');
	window.addEventListener('scroll', function() {
		if (window.pageYOffset > 300) {
			backToTopBtn.classList.add('show');
		} else {
			backToTopBtn.classList.remove('show');
		}
	});
	backToTopBtn.addEventListener('click', function() {
		window.scrollTo({
			top: 0,
			behavior: 'smooth'
		});
	});
});
</script>
