<style>
.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 2rem 1rem;
  padding-top: 8rem;
}

.hero {
  text-align: center;
  margin-bottom: 3rem;
}

.hero-title {
  font-size: 2.5rem;
  font-weight: 800;
  margin-bottom: 1rem;
  color: #2d3748;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 1rem;
}

.hero-icon {
  font-size: 2.5rem;
}

.hero-subtitle {
  font-size: 1.2rem;
  color: #718096;
  max-width: 600px;
  margin: 0 auto;
}

.breadcrumb {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin-bottom: 3rem;
  padding: 1rem;
  background: #f7fafc;
  border-radius: 8px;
  font-size: 0.9rem;
}

.breadcrumb a {
  color: #3182ce;
  text-decoration: none;
}

.breadcrumb a:hover {
  text-decoration: underline;
}

.separator {
  color: #718096;
}

.current {
  color: #2d3748;
  font-weight: 600;
}

/* Workshops Grid */
.workshops-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
  gap: 2rem;
  margin-bottom: 4rem;
}

.workshop-card {
  background: white;
  border-radius: 16px;
  padding: 2rem;
  border: 3px solid;
  transition: all 0.3s ease;
  position: relative;
}

.workshop-card.available {
  border-color: #ffd700;
  background: linear-gradient(135deg, #ffd700 0%, #ffed4e 100%);
}

.workshop-card.available:hover {
  transform: translateY(-6px);
  box-shadow: 0 16px 40px rgba(255, 215, 0, 0.3);
}

.workshop-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 1rem;
}

.workshop-icon {
  font-size: 2rem;
}

.workshop-status {
  padding: 0.25rem 0.75rem;
  border-radius: 20px;
  font-size: 0.75rem;
  font-weight: 600;
  background: #22c55e;
  color: white;
}

.workshop-title {
  font-size: 1.5rem;
  font-weight: 700;
  margin-bottom: 1rem;
  color: #1a202c;
}

.workshop-description {
  color: #4a5568;
  margin-bottom: 1.5rem;
  line-height: 1.6;
}

.workshop-features {
  list-style: none;
  padding: 0;
  margin-bottom: 2rem;
}

.workshop-features li {
  padding: 0.5rem 0;
  color: #2d3748;
  font-weight: 500;
}

.workshop-btn {
  display: inline-block;
  width: 100%;
  padding: 1rem;
  background: #1a202c;
  color: white;
  border: none;
  border-radius: 8px;
  font-weight: 600;
  text-decoration: none;
  text-align: center;
  transition: all 0.3s ease;
  cursor: pointer;
}

.workshop-btn:hover {
  background: #2d3748;
  transform: translateY(-2px);
  color: white;
}

/* Workshop Info */
.workshop-info {
  margin-bottom: 4rem;
}

.info-title {
  font-size: 2rem;
  font-weight: 700;
  text-align: center;
  margin-bottom: 2rem;
  color: #2d3748;
}

.info-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 1.5rem;
}

.info-card {
  background: white;
  border-radius: 12px;
  padding: 1.5rem;
  border: 2px solid #e2e8f0;
  text-align: center;
  transition: all 0.3s ease;
}

.info-card:hover {
  border-color: #ffd700;
  transform: translateY(-2px);
  box-shadow: 0 8px 16px rgba(0,0,0,0.1);
}

.info-card h4 {
  margin-bottom: 1rem;
  color: #2d3748;
  font-size: 1.1rem;
}

.info-card p {
  color: #718096;
  line-height: 1.6;
  margin: 0;
  font-size: 0.95rem;
}

/* Page Navigation */
.page-navigation {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 2rem 0;
  border-top: 1px solid #e2e8f0;
}

.nav-btn {
  display: inline-flex;
  align-items: center;
  padding: 0.75rem 1.5rem;
  background: white;
  border: 2px solid #ffd700;
  border-radius: 8px;
  color: #b45309;
  text-decoration: none;
  font-weight: 600;
  transition: all 0.3s ease;
}

.nav-btn:hover {
  background: #ffd700;
  color: #1a202c;
  transform: translateY(-2px);
}

@media (max-width: 768px) {
  .hero-title {
    font-size: 2rem;
    flex-direction: column;
    gap: 0.5rem;
  }
  
  .workshops-grid {
    grid-template-columns: 1fr;
  }
  
  .info-grid {
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  }
  
  .page-navigation {
    flex-direction: column;
    gap: 1rem;
  }
  
  .nav-btn {
    width: 100%;
    justify-content: center;
  }
}

@media (max-width: 480px) {
  .workshops-grid {
    grid-template-columns: 1fr;
  }
  
  .workshop-card {
    padding: 1.5rem;
  }
  
  .info-grid {
    grid-template-columns: 1fr;
  }
}
